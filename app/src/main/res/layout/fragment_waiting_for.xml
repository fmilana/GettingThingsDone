<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/waiting_for_constraint_layout"
    android:background="@color/colorLighterGrey"
    android:padding="@dimen/item_list_padding">

    <TextView
        android:id="@+id/emtpy_waiting_for_list_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/waiting_for_is_empty"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/waiting_for_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>