<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tags_coordinator_layout"
    android:background="@color/colorLighterGrey">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tags_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/tags_progress_bar"
        android:paddingTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/empty_tags_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_no_tags"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:lineSpacingExtra="5dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tags_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_fab_add" />

</android.support.design.widget.CoordinatorLayout>