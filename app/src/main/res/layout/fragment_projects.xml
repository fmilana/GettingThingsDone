<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/projects_constraint_layout"
    android:background="@color/colorLighterGrey"
    android:padding="@dimen/item_list_padding">

    <ProgressBar
        android:id="@+id/projects_progress_bar"
        android:paddingTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/empty_project_list_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/projects_is_empty"
        android:visibility="gone"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/projects_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>