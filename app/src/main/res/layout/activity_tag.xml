<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLighterGrey"
    android:padding="@dimen/standard_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_tag_input_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_tag_input_edit_text"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/new_tag_input_hint"
            android:maxLines="1"
            android:inputType="textCapSentences"
            android:windowSoftInputMode="stateVisible"
            android:backgroundTint="@android:color/transparent"
            />

    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/new_tag_input_text_input_layout"/>

    <TextView
        android:id="@+id/days_of_the_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="@string/days_of_the_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_tag_input_text_input_layout" />

    <LinearLayout
        android:id="@+id/days_of_the_week_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/days_of_the_week_text">

        <ToggleButton
            android:id="@+id/monday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="M"
            android:textOff="M"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
        <ToggleButton
            android:id="@+id/tuesday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="T"
            android:textOff="T"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
        <ToggleButton
            android:id="@+id/wednesday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="W"
            android:textOff="W"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
        <ToggleButton
            android:id="@+id/thursday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="T"
            android:textOff="T"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
        <ToggleButton
            android:id="@+id/friday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="F"
            android:textOff="F"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
        <ToggleButton
            android:id="@+id/saturday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="S"
            android:textOff="S"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
        <ToggleButton
            android:id="@+id/sunday_toggle_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textOn="S"
            android:textOff="S"
            style="@style/toggleButton"
            android:background="@drawable/toggle_background"/>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/days_of_the_week_layout"/>

    <LinearLayout
        android:id="@+id/time_and_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@id/divider2">

        <Button
            android:id="@+id/new_tag_time_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="10dp"
            android:text="@string/time"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/days_of_the_week_layout"/>

        <Button
            android:id="@+id/new_tag_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:text="@string/location"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>